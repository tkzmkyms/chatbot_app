<div class="h-screen flex flex-col bg-gray-100">
  <!-- チャットエリア -->
  <div id="chat-box" class="flex-1 overflow-y-auto p-4 space-y-2" data-controller="scroll">
    <%= turbo_stream_from "messages" %>
    <%= render partial: "messages/message", collection: @messages %>
  </div>

  <!-- メッセージ送信フォーム -->
  <div class="bg-white border-t p-4">
    <%= form_with model: [@chat_room, Message.new], local: false do |f| %>
      <div class="flex">
        <%= f.text_field :content, class: "flex-1 border rounded-full px-4 py-2 mr-2", placeholder: "メッセージを入力…" %>
        <%= f.submit "送信", class: "bg-blue-500 text-white px-4 py-2 rounded-full" %>
      </div>
    <% end %>
  </div>
</div>